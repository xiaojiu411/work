@import '~common/stylus/variable'
@import '~common/stylus/mixin'
.mask
  position: fixed
  z-index 999
  height: 100%
  width: 100%
  top: 0
  left: 0
  bottom: 0
  right: 0
  background: rgba(0, 0, 0, .7)

.menu-wrapper
  position fixed
  z-index 9999
  right: 0
  top: 0
  width: 84%
  height: 100%
  padding-bottom 40px
  overflow auto
  background: $color-gray-background
  color $color-light
  .tab-header
    display none
    background #fff
    padding 10px

  .tab-content
    padding 10px
    overflow auto
  .common-type
    border-bottom 1px solid $color-border-gray
    margin-bottom 15px
    &:last-child
      margin-bottom 0
      border 0
    .tit
      font-size 15px
      margin-bottom 10px
      color #434343
      padding-left: .5rem
      border-left: 4px solid
    .item-list
      clearfix()
      .item
        float left
        width 32%
        margin-right 1.3%
        margin-bottom 10px
        background transparent
        line-height 30px
        text-align center
        border-radius 5px
        border 1px solid #6c9fff
        color #6c9fff
        &.active
          background #6c9fff
          color #fff
          border 1px solid #6c9fff

  .bottom
    position fixed
    right 0
    bottom 0
    width 84%
    line-height 40px
    color $color-text
    display flex
    text-align center
    border-top 5px solid $color-gray-background
    span
      flex 1
      background #eee
      &:last-child
        background #6c9fff
        color $color-light

