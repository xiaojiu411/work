@import '~common/stylus/variable'
@import '~common/stylus/mixin'
.service
  mobile-wrapper()
  background #eee
  .fullwidth
    width 100%
  .m-list
    background $color-light
    li
      &.active
        .icon-arrow
          transform rotate(90deg)
      .tit
        display flex
        justify-content space-between
        align-items center
        line-height 3rem
        m-wrapper()
        border-bottom 1px solid $color-border-gray
        .icon-badge-shit
          display inline-block
          width 25px
          margin-right 5px
          font-size 20px
          vertical-align middle
          color $color-blue-mobile
        .icon-arrow
          transition all .3s ease-in
          color #dcdcdc
        .itemImg
          width: 1.5rem
          margin-right: .5rem

      .sub
        padding 20px
        background $color-dark-gray
        line-height 26px
        img
          max-width 100%
          margin-bottom 10px