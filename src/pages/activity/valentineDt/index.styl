@import '~common/stylus/variable'
@import '~common/stylus/mixin'

.bg-wap
  position: relative
  background: url(./img/bg1.jpg) no-repeat center 0,
          url(./img/bg2.jpg) no-repeat center 466px,
          url(./img/bg3.jpg) no-repeat center 1728px
  padding: 760px 0 100px
  overflow: hidden
  text-align center
  font-size 18px
  line-height 3
  color #c57dea
  p b
    font-size 20px
    font-weight bold
    color #fac050
  .topic
    margin-bottom 10px
  .game
    width 1000px
    margin 60px auto 20px
  .item
    display inline-block
    margin 24px
    cursor pointer
  .imgs
    position relative
    width 270px
    border 1px solid #8d501f
    transition all .3s ease-in
    &:hover
      transform:scale(1.1)
    img
      border: 4px solid #f39a00
      margin 5px
    h3
      position absolute
      bottom: 0
      width: 100%
      z-index: 99
      background: rgba(0,0,0,.7)
      color #fff
  .mid
    .item
      margin 60px 0px
  .rule
    background: url(./img/rule-bg.png) no-repeat center;
    height: 696px;
    width: 1200px;
    padding: 70px;
    margin: 0 auto;
    p
      text-align left
      span
        color #ddb46d

@media screen and (max-width: 767px)
  body
    background: #0c0534
    color: #fff
    font-size: 35px
    text-align: center
    .bg-wap.main
      background: url(./img/bgm.jpg) no-repeat top center #280749
      padding-top: 220px
      overflow: hidden
      padding-bottom: 60px
      background-size: contain
      .s-wrap
        overflow-x: auto;
        .game
          width 1850px
          .item
            float left
            margin 10px 14px
      .topic
        width 100%
      .rule
        background transparent
        height auto
        width 100%
        padding 10px
        img
          width 40%