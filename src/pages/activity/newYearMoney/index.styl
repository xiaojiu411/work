@import '~common/stylus/variable'
@import '~common/stylus/mixin'

.bg-wap
  position: relative
  background: url(./img/bg1.jpg) no-repeat top center, url(./img/bg2.jpg) no-repeat top center
  padding: 300px 0 10px
  overflow: hidden
  text-align center
  .status
    width 1420px
    margin 0 auto
    overflow hidden
    .item
      float left
      display inline-block
      .pro span
        display inline-block
        width 100px
        height 40px
        background rgba(0,0,0,.5)
        border-radius 10px
        margin-top: 150px
        line-height: 40px
        color: #fff
        font-size: 18px
    .item:nth-child(2)
      margin-top: 226px
      margin-left: -34px
    .item:nth-child(3)
      margin-top: 242px
      margin-left: 70px
    .item:nth-child(4)
      margin-top: 218px
      margin-left: 70px
    .item:nth-child(5)
      margin-left: -36px
    .item>div
      float left
      display inline-block
      width 270px
      height 270px
    .item.sw .pro
      background url("./img/sw.png") no-repeat
    .item.mg .pro
      background url("./img/mg.png") no-repeat
    .item.pg .pro
      background url("./img/pg.png") no-repeat
    .item.dt .pro
      background url("./img/dt.png") no-repeat
    .item.cq9 .pro
      background url("./img/cq9.png") no-repeat

    .sw .final
      background url("./img/sw-a.png") no-repeat
    .mg .final
      background url("./img/mg-a.png") no-repeat
    .pg .final
      background url("./img/pg-a.png") no-repeat
    .dt .final
      background url("./img/dt-a.png") no-repeat
    .cq9 .final
      background url("./img/cq9-a.png") no-repeat


  .handle
    margin-top 20px
    img
      filter: grayscale(100%)
      cursor pointer
    img.active
      filter: grayscale(0)
    span
      text-decoration underline
      color #fff100
      font-size: 18px
      line-height: 3

  .rule
    width 980px
    margin 0 auto
    color #fff
    img
      margin-bottom 20px
    p
      width: 800px
      margin: 0 auto
      text-align left
      font-size: 19px
      line-height: 2;
      color #f5e3a1


@media screen and (max-width: 767px)
  body
    background: #0c0534
    color: #fff
    font-size: 35px
    text-align: center
    .bg-wap.main
      background: url(./img/bgm.jpg) no-repeat top center #b0271a
      padding-top: 220px
      overflow: hidden
      padding-bottom: 60px
      background-size: contain
      .handle
        img
          width 60%
      .s-wrap
        overflow-x: auto;
        .status
          width 1350px
          .item
            margin 0px
            float inherit

      .rule
        width: 90%
        margin 0 auto
        font-size: 20px
        img
          width: 100%
          margin: 20px 0
        p
          width 100%
